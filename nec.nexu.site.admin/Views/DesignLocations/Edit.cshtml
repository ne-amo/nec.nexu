@using System.Configuration
@model nec.nexu.site.admin.Models.DesignLocationAdminViewModel

@{
    ViewBag.Title = "Edit";
}


<script src="~/Scripts/jquery-2.1.1.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {

        var viewId = '@Model.DesignLocation.TemplateViewId';

        $('#DesignLocation_TemplateId').change(function () {
            var url = '@ConfigurationManager.AppSettings["api_url"]' + 'api/masterdata/producttemplate/' + $(this).val() + '/views';

            $.ajax({
                cache: true,
                type: 'GET',
                url: url,
                dataType: 'json',
                //jsonCallback: 'nexuJson',
                crossDomain: true,
                success: function(data) {
                    $('#TemplateViewId').html('');
                    $.each(data, function (id, option) {

                        if (option.Id == viewId) {
                            $('#DesignLocation_TemplateViewId').append($('<option selected="selected"></option>').val(option.Id).html(option.DisplayName));
                        } else {
                            $('#DesignLocation_TemplateViewId').append($('<option></option>').val(option.Id).html(option.DisplayName));
                        }

                        
                    });
                },
                error: function(xhr, ajaxOptions, thrownError) {
                    alert('failed to retrieve product template views. '  + ' . ' + thrownError);
                }
            });
        });


        if ($('#DesignLocation_TemplateId').val() != '') {
            $('#DesignLocation_TemplateId').trigger('change');
        }


    });



   // });

</script>


