@model nec.nexu.Models.DesignColor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Scripts/jquery-2.1.1.js"></script>
<script type="text/javascript" src="~/Scripts/jquery-ui-1.11.1.js"></script>
<script type="text/javascript" src="~/Scripts/iris.min.js"></script>
<script type="text/javascript">
    $(document).ready(function ($) {
        $('#color-picker').iris();
    });
</script>
<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Design Color</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DisplayName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DisplayName)
            @Html.ValidationMessageFor(model => model.DisplayName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pms)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pms)
            @Html.ValidationMessageFor(model => model.Pms)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.TextColor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TextColor)
            @Html.ValidationMessageFor(model => model.TextColor)
        </div>

        @Html.HiddenFor(model => model.Id)


        <div class="editor-label">
            @Html.LabelFor(model => model.Opacity)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Opacity, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.Opacity)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SortOrder)
            @Html.ValidationMessageFor(model => model.SortOrder)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Hex, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="color-picker" name="Hex" value="@Model.Hex" />
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.BlendMode, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="editor-field">
            @Html.EnumDropDownListFor(model => model.BlendMode)
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Active, htmlAttributes: new { @class = "control-label col-md-2" })
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Active)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
