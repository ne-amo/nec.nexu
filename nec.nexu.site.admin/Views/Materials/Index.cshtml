@model IEnumerable<nec.nexu.Models.Material>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="kendoGrid">
    <tr>
        <th>
            Color
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pms)
        </th>
